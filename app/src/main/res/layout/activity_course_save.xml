<?xml version="1.0" encoding="utf-8"?>
  <androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.myapplication.ui.course_save">

    <ScrollView
        android:layout_width="409dp"
        android:layout_height="657dp"
        android:padding="25dp"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <fragment
                    android:id="@+id/course_fragment"
                    android:name="com.example.myapplication.fragment.back_btn"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <TextView
                    android:layout_width="281dp"
                    android:layout_height="62dp"
                    android:gravity="center_vertical"
                    android:text="Save"
                    android:textSize="24sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.661"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.0" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="match_parent"
                android:layout_height="270dp"
                android:layout_marginTop="40dp"
                app:srcCompat="@drawable/user1" />

            <TextView
                android:id="@+id/textView18"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Course was saved"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView20"
                android:layout_width="198dp"
                android:layout_height="35dp"
                android:layout_marginTop="20dp"
                android:text="you can find this course in your profile"
                android:textColor="@color/gray_border" />

            <Button
                android:id="@+id/nextBtn_course_save"
                style="@style/MyButton"
                android:layout_width="244dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="70dp"
                android:text="Next" />
        </LinearLayout>
    </ScrollView>
  </androidx.constraintlayout.widget.ConstraintLayout>