<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="com.example.myapplication.fragment.lesson_frame">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="113dp"
        android:layout_marginHorizontal="5dp"
        android:layout_marginVertical="12dp"
        android:layout_marginLeft="20dp"
        android:background="@drawable/input_border"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/lessonImage"
            android:layout_width="205dp"
            android:layout_height="94dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:src="@drawable/user10" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingHorizontal="20dp">

            <TextView
                android:id="@+id/lessonName"
                android:layout_width="match_parent"
                android:layout_height="53dp"
                android:gravity="center_vertical"
                android:text="Name Lesson"
                android:textAlignment="viewStart"
                android:textSize="20sp"
                tools:ignore="RtlCompat" />

            <ProgressBar
                android:id="@+id/lessonProgressBar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:indeterminate="false"
                android:progress="40"
                android:progressDrawable="@drawable/custom_process_bar" />

        </LinearLayout>
    </LinearLayout>
</FrameLayout>