<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/input_background"
    tools:context="com.example.myapplication.ui.course_detail">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="14dp"
        android:scrollbars="none"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="-97dp"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:gravity="center"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageButton
                    android:id="@+id/course_detail_back_btn"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="@drawable/circle_border"
                    android:backgroundTint="@null"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.333"
                    app:srcCompat="@drawable/back" />

                <TextView
                    android:id="@+id/course_detail_name"
                    android:layout_width="320dp"
                    android:layout_height="53dp"
                    android:gravity="center_vertical"
                    android:text="React"
                    android:textSize="24sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.824"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="1.0" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <ImageView
                android:id="@+id/course_detail_image"
                android:layout_width="match_parent"
                android:layout_height="321dp"
                app:srcCompat="@drawable/user5" />

            <TextView
                android:id="@+id/textview13"
                android:layout_width="match_parent"
                android:layout_height="41dp"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical"
                android:text="About the course"
                android:textAlignment="textStart"
                android:textSize="22dp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.235"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.728"
                tools:ignore="RtlCompat" />

            <TextView
                android:id="@+id/course_detail_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="8sp"
                android:paddingTop="8dp"
                android:paddingBottom="20dp"
                android:text=" This course gives you a solid foundation in the React.js library, one of the most popular user interface development technologies today."
                android:textAlignment="viewStart"
                android:textColor="@color/gray_border" />

            <TextView
                android:id="@+id/textview14"
                android:layout_width="match_parent"
                android:layout_height="41dp"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical"
                android:text="Duration"
                android:textAlignment="textStart"
                android:textSize="22dp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.235"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.728"
                tools:ignore="RtlCompat" />

            <TextView
                android:id="@+id/course_detail_duration"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="8sp"
                android:paddingTop="8dp"
                android:paddingBottom="20dp"
                android:text="3h 15 mins"
                android:textAlignment="viewStart"
                android:textColor="@color/gray_border" />

            <TextView
                android:id="@+id/textview15"
                android:layout_width="match_parent"
                android:layout_height="41dp"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical"
                android:text="Lesson"
                android:textAlignment="textStart"
                android:textSize="22dp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.235"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.728"
                tools:ignore="RtlCompat" />

            <TextView
                android:id="@+id/course_detail_number_lesson"
                android:layout_width="373dp"
                android:layout_height="59dp"
                android:lineSpacingExtra="8sp"
                android:paddingTop="8dp"
                android:paddingBottom="20dp"
                android:text="12 lessons"
                android:textAlignment="viewStart"
                android:textColor="@color/gray_border" />

            <ExpandableListView
                android:id="@+id/expandableListView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="30dp"
                android:background="@drawable/input_border"
                android:divider="@android:color/background_light"
                android:dividerHeight="0.5dp"
                android:indicatorLeft="?android:attr/expandableListPreferredItemIndicatorLeft"
                android:textAlignment="textStart"></ExpandableListView>

            <Button
                android:id="@+id/dangky_course"
                style="@style/MyButton"
                android:layout_width="347dp"
                android:layout_height="67dp"
                android:layout_marginBottom="50dp"
                android:text="Enter the course"
                android:textSize="20sp"
                android:textStyle="bold" />

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>