<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="com.example.myapplication.fragment.course_frame">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="20dp"
        android:background="@drawable/input_border"
        android:orientation="vertical"
        android:padding="10dp"
        android:paddingVertical="10dp">

        <ImageView
            android:id="@+id/course_image"
            android:layout_width="match_parent"
            android:layout_height="265dp"
            app:srcCompat="@drawable/user7" />

        <TextView
            android:id="@+id/course_duration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="3 h 15 mins"
            android:textAlignment="viewStart"
            android:textColor="@color/light_blue" />

        <TextView
            android:id="@+id/course_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="10dp"
            android:text="React"
            android:textAlignment="viewStart"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/course_detail_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="React basic with real project"
            android:textAlignment="viewStart"
            android:textColor="@color/gray_border" />

    </LinearLayout>
</FrameLayout>